<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
    </style>

    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@android:color/holo_orange_light</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
    </style>

    <style name="bDayButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@android:color/holo_orange_dark</item>
        <item name="colorControlHighlight">@android:color/holo_orange_light</item>
    </style>

</resources>
